<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ionut.application.PatientController.PatientDetails">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PatientPhone"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="11dp"
        android:id="@+id/textView10" />

    <TextView
        android:text="Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PatientCountry"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginBottom="8dp"
        android:id="@+id/textView11" />

    <TextView
        android:text="First  NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/PatientFirstName"
        android:layout_alignBottom="@+id/PatientFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="132dp"
        android:id="@+id/PatientFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/SaveButton"
        android:layout_alignStart="@+id/SaveButton"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/PatientFirstName"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PatientLastName"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/PatientFirstName"
        android:layout_alignStart="@+id/PatientFirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PatientEmail"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/PatientLastName"
        android:layout_alignLeft="@+id/PatientLastName"
        android:layout_alignStart="@+id/PatientLastName" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:layout_alignBaseline="@+id/PatientEmail"
        android:layout_alignBottom="@+id/PatientEmail"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="37dp"
        android:id="@+id/PatientAge"
        android:layout_below="@+id/PatientEmail"
        android:layout_alignLeft="@+id/PatientEmail"
        android:layout_alignStart="@+id/PatientEmail" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/PatientAge"
        android:layout_alignBottom="@+id/PatientAge"
        android:layout_alignRight="@+id/Email"
        android:layout_alignEnd="@+id/Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:id="@+id/PatientPhone"
        android:layout_below="@+id/PatientAge"
        android:layout_alignLeft="@+id/PatientAge"
        android:layout_alignStart="@+id/PatientAge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/PatientCountry"
        android:layout_below="@+id/PatientPhone"
        android:layout_alignLeft="@+id/PatientPhone"
        android:layout_alignStart="@+id/PatientPhone" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeleteButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/SaveButton"
        android:layout_alignBottom="@+id/SaveButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SaveButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/BackButton"
        android:layout_alignBottom="@+id/BackButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
